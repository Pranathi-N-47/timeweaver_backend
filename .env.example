# Database Configuration
DATABASE_URL=postgresql://postgres:your_db_password_here@localhost:5432/timeweaver_db

# Test Database (used by pytest)
TEST_DATABASE_URL=postgresql+asyncpg://postgres:your_db_password_here@localhost:5432/timeweaver_test

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=TimeWeaver API
